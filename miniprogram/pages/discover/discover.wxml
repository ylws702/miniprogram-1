<!--miniprogram/pages/discover/discover.wxml-->
<view class="main">
	<view class="section1">
		<picker
		 mode="multiSelector"
		 bindtap="onPickerTap"
		 bindchange="bindMultiPickerChange"
		 bindcolumnchange="bindMultiPickerColumnChange"
		 value="{{multiIndex}}"
		 range="{{multiArray}}"
		>
			<view class="city-wrapper">
				<view class="city-name">{{cityName}}</view>
				<image class="city-select-img" src="../../images/icon_under@3x.png" />
			</view>
		</picker>
		<view class="search-wrapper" bindtap="onSearchInputTap">
			<input
			 class="search-input"
			 placeholder="找找群"
			 value="{{searchValue}}"
			></input>
			<icon class="search-icon" type="search"></icon>
		</view>
	</view>
	<view class="section2">
		<view
		 wx:key="_id"
		 wx:for="{{groupData}}"
		 wx:for-index="groupDataIndex"
		 wx:for-item="groupDataItem"
		>
			<navigator url="../detail/detail?groupId={{groupDataItem._id}}">
				<view class="group">
					<view class="group-image-wrapper">
						<image class="group-image" src="{{groupDataItem.images[0]}}" />
					</view>
					<view class="group-title">
						{{groupDataItem.title}}
					</view>
					<view class="group-introduction">
						{{groupDataItem.introduction}}
					</view>
					<view class="group-footer">
						<view class="user">
							<image class="user-icon" src="{{groupDataItem.userIcon}}" />
							<view class="user-name">
								{{groupDataItem.masterName}}
							</view>
						</view>
						<view
						 catchtap="onLikeTap"
						 data-groupid="{{groupDataItem._id}}"
						 class="like"
						>
							<image class="like-icon" src="{{groupDataItem.ifLike ? '../../images/icon_praise_h@3x.png' : '../../images/icon_praise_n@3x.png'}}" />
							<view class="like-number">
								{{groupDataItem.like}}
							</view>
						</view>
					</view>
				</view>
			</navigator>
		</view>
	</view>
</view>

