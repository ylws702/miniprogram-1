/* miniprogram/pages/detail/detail.wxss */
.swiper {
  height: 200px;
}
.swiper-box {
  height: 200px;
}
.title-wrapper {
  display: grid;
  grid-template-columns: 1fr auto;
}
.title {
  font-size: large;
  font-weight: bold;
}
.edit-icon {
  width: 1.5rem;
  height: 1.5rem;
  grid-column: 2;
}
.group-info-wrapper {
  display: grid;
  grid-template-columns: auto auto;
}
.creater {
  display: inline;
}
.create-time {
  grid-column: 2;
}
.caeater-icon {
  height: 1em;
  width: 1em;
}
.introduction {
  border-top: 2px solid black;
  border-bottom: 2px solid black;
}
.qr-code {
  width: 200px;
}
.comment {
  width: 100%;
  background-color: #fff;
}
.collectTitle {
  border-left: solid 10rpx red;
  margin-left: 30rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}
.pinglun {
  width: 100%;
  height: 80rpx;
  border-bottom: solid 1rpx #f9f9f9;
  line-height: 80rpx;
}
.display {
  width: 100%;
  background-color: #fff;
}
.none {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
.user-nickname {
  padding: 20rpx 30rpx 0 30rpx;
  display: flex;
}
.user-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-right: 30rpx;
}
.nickname {
  font-size: 24rpx;
  color: #999;
  grid-column: 2;
}
.commentDetail {
  padding: 20rpx 110rpx 0 110rpx;
  font-size: 26rpx;
}
.time-heart {
  padding: 0rpx 30rpx 0 30rpx;
  display: grid;
  grid-template-columns: 1fr auto auto;
  height: 50rpx;
  position: relative;
}
.comment-time {
  font-size: 20rpx;
  color: #999;
  margin-left: 70rpx;
}
.reply-text {
  text-decoration: underline;
  color: blue;
}
.like {
  grid-column: 3;
  margin-left: 0.5rem;
  display: flex;
}
.like-icon {
  height: 1rem;
  width: 1rem;
}
.comment-reply {
  margin-left: 2rem;
}
.dianzan {
  font-size: 20rpx;
  display: inline-block;
  color: #999;
  position: absolute;
  right: 60rpx;
  top: 14rpx;
}
.comment-count {
  border-top: solid 1rpx #f9f9f9;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}
